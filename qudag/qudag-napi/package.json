{
  "name": "@daa/qudag-native",
  "version": "0.1.0",
  "description": "Native Node.js bindings for QuDAG quantum-resistant cryptography",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "qudag-native",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl"
      ]
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node --test",
    "version": "napi version",
    "benchmark": "node benchmarks/crypto.js"
  },
  "keywords": [
    "qudag",
    "quantum-resistant",
    "post-quantum",
    "cryptography",
    "ml-kem",
    "ml-dsa",
    "blake3",
    "napi-rs",
    "native-addon"
  ],
  "author": "rUv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/daa",
    "directory": "qudag/qudag-napi"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
